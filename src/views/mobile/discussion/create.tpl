<div class="primary-bg d-flex justify-content-center">
    <div class="container secondary-bg rounded-10-px mt-3 component-full">
        <p class="font-semi-bold font-18 pt-2 mb-20-px">Create Discussion Room</p>

        <form id="create-dr-form">

            <!-- header img and name -->
            <div class="input-group mb-3">
                <input type="text" class="form-control font-10" placeholder="Enter Discussion room name" name="name"
                    aria-label="Enter Discussion room name" aria-describedby="img-btn">
                <div class="input-group-append">
                    <input type="file" accept="image/*" class="form-control-file d-none" id="event-img" name="files[image]" />
                    <label for="event-img"
                        class="primary-shadow button-secondary d-flex justify-content-center align-items-center mb-0 btn-fit-input rounded-right-5-px">
                        <i class="fas fa-solid fa-image"></i>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <div class="form-group w-100 mr-1">
                    <select class="form-control font-10" id="dr-classification" name="classification">
                        <option selected disabled>Room Classification</option>
                        <option>General Discussion</option>
                        <option>Socratic Dialogue</option>
                        <option>Topic Oriented</option>
                    </select>
                </div>

                <div class="form-group w-100 ml-1">
                    <select class="form-control font-10" id="dr-participant-criteria" name="criteria">
                        <option selected disabled>Participant Criteria</option>
                        <option value="everyone">Everybody</option>
                        <option value="rr">Rigor Rank</option>
                        <option value="reflection">Reflection Submission</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <select class="form-control font-10" id="dr-category">
                    <option selected disabled>Select Category</option>
                </select>
            </div>           

            <div class="form-group">
                <textarea class="form-control font-10" name="description" id="dr-description"
                    placeholder="Discussion room description. . ." rows="4"></textarea>
            </div>
            <div class="form-group">
                <textarea class="form-control font-10" id="dr-rules" name="rules" rows="3"
                    placeholder="Discussion room rules. . ."></textarea>
            </div>

            <div class="input-group mb-3">
                <input type="text" class="form-control font-10" placeholder="Are you promoting an event?"
                    aria-label="Are you promoting an event?" aria-describedby="img-btn">
                <div class="input-group-append">
                    <input type="datetime-local" class="invisible position-absolute" id="event-date" />
                    <label for="event-date"
                        class="primary-shadow button-secondary font-10 d-flex justify-content-center align-items-center mb-0 rounded-right-5-px btn-fit-input">
                        <i class="fas fa-solid fa-calendar font-14"></i>
                    </label>
                </div>
            </div>

            <div class="form-group mb-20-px">
                <input type="search" class="form-control font-10" id="username-search" placeholder="Add co-moderators">
                <div class="bg-white rounded-bottom px-2 d-none" id="users-menu">
                    <div id="user-menu-content"></div>
                </div>
            </div>

            <div class="pb-5">
                <button type="submit" class="button-brand button-lg-p font-10 floating-right">Create
                    Room</button>
            </div>

        </form>
    </div>
</div>