<div class="primary-bg container d-flex align-items-center py-2">
    <i class="fa-solid fa-arrow-left" id="back-btn"></i>
    <div class="font-semi-bold ml-3">Change Email ID</div>
</div>
<div class="container mt-3">
    <form>
        <div class="form-group">
            <label for="newEmailInput" class="font-12 font-medium">Enter your new Email ID</label>
            <input type="email" name="email" class="form-control font-12" id="newEmailInput" aria-describedby="emailHelp"
                required>
        </div>
        <div class="form-group">
            <label for="pwdInput" class="font-12 font-medium">Enter your Password</label>
            <input type="password" class="form-control font-12" id="pwdInput" name="password" required>
        </div>
        <button type="submit" class="btn button-brand font-12">Confirm</button>
    </form>
</div>